<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/background">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:padding="17dp"
            android:layout_weight="1.2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Halo "
                        android:textColor="@color/colorkuning"
                        android:textSize="26sp"
                        android:fontFamily="@font/myriadprobold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John"
                        android:textColor="@color/colorkuning"
                        android:textSize="26sp"
                        android:fontFamily="@font/myriadprobold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Saldo Rekening Kamu : "
                        android:fontFamily="@font/myriadproregular"
                        android:textColor="@color/colorkuning"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Rp "
                        android:textColor="@color/colorkuning"
                        android:fontFamily="@font/myriadprobold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="9.000.000"
                        android:textColor="@color/colorkuning"
                        android:fontFamily="@font/myriadprobold"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:padding="20dp"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="20dp"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <ImageView
                               xmlns:app="http://schemas.android.com/apk/res-auto"
                               android:layout_width="match_parent"
                               android:layout_height="60dp"
                               android:layout_weight="1"
                               android:src="@drawable/colored_stock_exchange_75" />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_gravity="center"
                               android:layout_marginTop="10dp"
                               android:layout_height="wrap_content"
                               android:text="Transfer"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <ImageView
                               xmlns:app="http://schemas.android.com/apk/res-auto"
                               android:layout_width="match_parent"
                               android:layout_height="60dp"
                               android:layout_weight="1"
                               android:src="@drawable/colored_decentralization_95"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_gravity="center"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"

                               android:text="Bayar"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <ImageView
                               xmlns:app="http://schemas.android.com/apk/res-auto"
                               android:layout_width="match_parent"
                               android:layout_height="60dp"
                               android:layout_weight="1"
                               android:src="@drawable/group_5" />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_gravity="center"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:text="Beli"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <ImageView
                               xmlns:app="http://schemas.android.com/apk/res-auto"
                               android:layout_width="match_parent"
                               android:layout_height="60dp"
                               android:layout_weight="1"
                               android:src="@drawable/colored_cvv_82"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_gravity="center"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:text="E-Money"/>
                       </LinearLayout>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="20dp"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <ImageView
                               xmlns:app="http://schemas.android.com/apk/res-auto"
                               android:layout_width="match_parent"
                               android:layout_height="60dp"
                               android:layout_weight="1"
                               android:src="@drawable/colored_history_60" />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_gravity="center"
                               android:layout_marginTop="10dp"
                               android:textAlignment="center"
                               android:layout_height="wrap_content"
                               android:text="Transaksi Tertunda"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <ImageView
                               xmlns:app="http://schemas.android.com/apk/res-auto"
                               android:layout_width="match_parent"
                               android:layout_height="60dp"
                               android:layout_weight="1"
                               android:src="@drawable/group_7" />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_gravity="center"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"

                               android:text="Favoritku"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <ImageView
                               xmlns:app="http://schemas.android.com/apk/res-auto"
                               android:layout_width="match_parent"
                               android:layout_height="60dp"
                               android:layout_weight="1"
                               android:src="@drawable/bitmap" />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_gravity="center"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:textAlignment="center"
                               android:text="Top Up LinkAja"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:id="@+id/inves">
                           <ImageView
                               xmlns:app="http://schemas.android.com/apk/res-auto"
                               android:layout_width="match_parent"
                               android:layout_height="60dp"
                               android:layout_weight="1"
                               android:src="@drawable/colored_liquidity_74"
                             />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_gravity="center"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:text="Investasi"/>
                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
            </android.support.v7.widget.CardView>

           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="30dp"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="12sp"
                           android:text="REKENING DAN TABUNGAN"
                           android:fontFamily="@font/myriadprosemibold" />
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:padding="10dp"
                           android:layout_marginTop="10dp"
                           android:orientation="horizontal">
                           <ImageView
                               android:layout_width="95dp"
                               android:layout_height="60dp"
                               android:src="@drawable/group_8"/>
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="vertical"
                               android:gravity="center"
                               android:layout_marginLeft="10dp">
                               <TextView
                                   android:layout_width="match_parent"
                                   android:text="John Doe"
                                   android:textSize="16sp"
                                   android:textColor="@color/colorPrimary"
                                   android:fontFamily="@font/myriadprosemibold"
                                   android:layout_height="wrap_content" />
                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:fontFamily="@font/myriadproregular"
                                   android:text="5126 76000 0000"
                                   android:textSize="12sp" />
                           </LinearLayout>
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"></LinearLayout>
                       </LinearLayout>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="30dp"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="12sp"
                           android:text="PEMBUKAAN REKENING BARU"
                           android:fontFamily="@font/myriadprosemibold" />
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:padding="10dp"
                           android:layout_marginTop="10dp"
                           android:orientation="horizontal">
                           <android.support.v7.widget.CardView
                               android:layout_width="95dp"
                               android:layout_height="60dp"
                               app:cardCornerRadius="10dp"
                               android:backgroundTint="#979797">
                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:gravity="center">
                                   <ImageView
                                       android:layout_width="30dp"
                                       android:layout_height="30dp"
                                       android:layout_gravity="center"
                                       android:src="@drawable/group_4"/>
                               </LinearLayout>
                           </android.support.v7.widget.CardView>
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="vertical"
                               android:gravity="center"
                               android:layout_marginLeft="10dp">
                               <TextView
                                   android:layout_width="match_parent"
                                   android:text="Pembukaan Rekening Baru"
                                   android:textSize="16sp"
                                   android:textColor="@color/colorPrimary"
                                   android:fontFamily="@font/myriadprosemibold"
                                   android:layout_height="wrap_content" />
                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:fontFamily="@font/myriadproregular"
                                   android:text="Buka rekening Tabungan Rencanda dan Deposito"
                                   android:textSize="12sp" />
                           </LinearLayout>
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"></LinearLayout>
                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
           </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>